
.body{
  width:100%;
}

.head{
  width: 100%;
  height: 400rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.headImg{
  width: 40%;
  height: 100%;
}

.headImg image{
  width: 100%;
  height: 100%;
}

.headText{
  width: 55%;
  height: 100%;
}

.xq{
  color: blue;
}

.headContext{
  font-size: 28rpx;
}

.selects, .perLife{
  margin-top: 10px;
  border-bottom: 4px #ddd solid;
  padding-bottom: 10px;
}

.selects-header{
  border-left: 3px solid green;
  display: flex;/*flex布局*/
  justify-content:space-between;
  padding: 5px;
  align-items: center;

}

.text-right{
  font-size: 12px;
  color: green;
}

.selects-context{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content:center;
}

.selects-context-imgs{
  height: 200rpx;
  width: 45%;
  background-color: #999;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 6px;
  position: relative;/*相对定位*/
}

.selects-context-imgs image{
  width: 100%;
  height: 100%;
}

.selects-context-text{
  font-size: 10px;
  position: absolute; /* 绝对定位 */
  bottom: 0px;
  height: 30rpx;
  width: 100%;
  /* 渐变色，第一个参数是从哪开始，第二个参数为起始颜色，第三个参数为终止颜色 */
  background: -webkit-linear-gradient(bottom,rgba(0, 0, 0, 0.5),rgba(0, 0, 0, 0));
  color: #ddd;
}

