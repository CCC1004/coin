
.body{
  width:100%;
}

.head{
  width: 100%;
  height: 400rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.head-image{
  width: 40%;
  height: 100%;
}

.head-image image{
  width: 100%;
  height: 100%;
}

.headText{
  width: 55%;
  height: 100%;
}

.xq{
  color: blue;
}

.headContext{
  font-size: 28rpx;
}

.musics, .perLife{
  margin-top: 10px;
  border-bottom: 4px #ddd solid;
  padding-bottom: 10px;
}

.selects-header{
  border-left: 3px solid green;
  display: flex;/*flex布局*/
  justify-content:space-between;
  padding: 5px;
  align-items: center;

}

.text-right{
  font-size: 12px;
  color: green;
}

.musics-list{
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content:center;
}

.music{
  width: 90%;
  height: 160rpx;
  border: 1px solid #ddd;
  margin-top: 20rpx;
  margin-bottom: 15rpx;
  align-self: center;
  display: flex;
  flex-wrap: wrap;
}

.music-img{
  display: flex;
  flex-wrap: wrap;
  width: 160rpx;
  height: 160rpx;
  justify-content: center;
  align-items: center;
}

.music-img image{
  width: 70%;
  height: 70%;
}

.music-context{
  width: 70%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
}

.music-author{
  font-size: 12px;
}