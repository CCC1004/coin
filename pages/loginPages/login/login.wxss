page {
  height: 100%;

}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
  background-color: #f2f2f2;
}

.title{
  margin:300rpx auto 0rpx auto;
  font-size:70rpx;
  color:#fff;
  word-spacing:10rpx;
  text-align:center;
}

/*表单内容*/

.login-from {
  margin-top: 150rpx;
  flex: auto;
}

.inputView {  
  border:none;
  background:none;
  font-size:72rpx;
  color:#fff;
}

/*输入框*/

.username, .password{
  width:60%;
  height:70rpx;
  line-height:70rpx;
  border-bottom:1rpx solid #fff;
  display: flex;
  flex-direction: row;
  text-align: left;
  padding:0rpx 0rpx 0rpx 10rpx;
}

.username{  
  margin:120rpx auto 0rpx auto; 
}
.password{
  margin:50rpx auto 0rpx auto;
}

.username input, .password input{
  border:none;
  background:none;
  font-size:32rpx;
  color:#fff;
  margin-left: 20rpx;
}

.nameImage, .keyImage {  
  width: 40rpx;
  height: 40rpx;
}

/*按钮*/

.loginBtnView {
  width:62%;
  height:100rpx;
  margin:60rpx auto 20rpx auto;
  line-height:90rpx;
  text-align:center;
  background:#fff;  
  border-radius:100rpx;
}

.loginBtn {
  width: 80%;
  font-size:36rpx;
  color:#313fcf;
  margin-top: 35px;
}

.loginPage{
  width: 100%;
  height: 100%;
  margin: 10px auto;
  background: linear-gradient(130deg, #3f90f1, rgb(137, 102, 219));
  /* background-image: url(''); */
}

.psection{
    color: #FFF;
}

.forgetPWView{
  text-align: center;
  font-size: 32rpx;
  margin-top: 20px;
}

.forgetPWView text{
  color: white;
  margin: 8px;
}