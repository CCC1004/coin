page {
  height: 100%;

}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
  background-color: white;
}

.regsiterPage{
  width: 100%;
  height: 100%;
  margin: 10px auto;
  /* background: linear-gradient(130deg, #ffd7df, rgb(137, 102, 219)); */
  background-color: white;
}

/*表单内容*/
.regsiter-from {
  margin-top: 150rpx;
  flex: auto;
}


/*输入框*/
.mobile, .idCode, .password{
  width:80%;
  height:70rpx;
  line-height:70rpx;
  border-bottom:1rpx solid #d4d4d4;
  display: flex;/* flex布局 */
  flex-direction: row;
  text-align: left;
  padding:0rpx 0rpx 0rpx 10rpx;
  margin:60rpx auto 0rpx auto; /* 上、右、下、左 */
}

.mobile input,.idCode input, .password input{
  border:none;
  background:none;
  font-size:35rpx;
  color:black;
  margin-left: 20rpx;
  width: 100%;
}

.mobileImage, .keyImage{  
  width: 40rpx;
  height: 40rpx;
  /* background-color: #ffd7df; */
  margin-left: 20rpx;
}

.idCodeImage{
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
  flex-shrink: 0;/* 当空间不足时，元素的缩小比例，默认为1，设置为0，不缩小 */
}

/* 提示信息 */
.psection{
  color: #b4b4b4;
  font-size: 28rpx;
}

/* 发送验证码 */
.sendIdCode input{
  color: #ff5d8f;
  font-size: 28rpx;
}

/*按钮*/
.regsiterBtnView {
  width:80%;
  height:85rpx;
  margin:100rpx auto 20rpx auto;
  line-height:80rpx;
  text-align:center;
  background:#ff5d8f;  
  border-radius:100rpx;
}

.regsiterBtn {
  width: 84%;
  font-size:33rpx;
  color:#fff;
}


/* 提示 */
.tishi{
  text-align: center;
  font-size: 24rpx;
  margin-top: 30px;
}

/* 协议 */
.protocol{
  color: #ff5d8f;
}
