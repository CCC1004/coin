<view class="container">
  <view class="regsiterPage">
    <view class="regsiter-from">
      <!--账号-->
      <view class="mobile">
        <image class="mobileImage" src="../../../images/icon/name.png"></image>
        <input class="" placeholder-class="psection" 
          placeholder="手机号码" bindinput="mobileInput" /> </view>     
      <!--验证码-->
      <view class="idCode">
        <image class="idCodeImage" src="../../../images/icon/key.png"></image>
        <input class="" placeholder-class="psection"
           placeholder="验证码" bindinput="idCodeInput" /> 
        <view class="sendIdCode">
          <input value='发送验证码'  bindtap="sendIdCode" />
        </view>
      </view>
      
       <!--密码-->
      <view class="password">
        <image class="keyImage" src="../../../images/icon/key.png"></image>
        <input class="" placeholder-class="psection" password="true" 
           placeholder="登录密码（6-16位数字字母组合密码）" bindinput="passwordInput" /> 
      </view>
      <!--按钮-->
      <view class="regsiterBtnView" bindtap="regsiter">
        <text class="regsiterBtn" >立即注册</text>
      </view>

      <view class='tishi'>
        <text>*注册代表您同意</text>
        <text class='protocol' bindtap="userProtocol" >《超炫用户协议》</text>
      </view>
    </view>
  </view>
</view>
