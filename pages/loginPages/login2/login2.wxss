page {
  height: 100%;

}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
  background-color: white;
}

.loginPage{
  width: 100%;
  height: 100%;
  margin: 0px auto;
  /* background: linear-gradient(130deg, #ffd7df, rgb(137, 102, 219)); */
  background-color: white;
}

.title{
  margin:100rpx auto 0rpx auto;
  font-size:70rpx;
  color:#ffd7df;
  word-spacing:10rpx;
  text-align:center;
}

.backImg{
  width: 100%;
  height: 250rpx;
  /* overflow: hidden;  */
  position:relative;
}

.backImg image{
  width: 100%;
  height: 100%;
}


/*表单内容*/

.login-from {
  margin-top: 50rpx;
  flex: auto;
}


/*输入框*/

.username, .password{
  width:80%;
  height:70rpx;
  line-height:70rpx;
  border-bottom:1rpx solid #d4d4d4;
  display: flex;
  flex-direction: row;
  text-align: left;
  padding:0rpx 0rpx 0rpx 10rpx;
}

.username{  
  margin:100rpx auto 0rpx auto; /* 上、右、下、左 */
}
.password{
  margin:50rpx auto 0rpx auto;
}

.username input, .password input{
  border:none;
  background:none;
  font-size:35rpx;
  color:black;
  margin-left: 20rpx;
}

.nameImage, .keyImage {  
  width: 40rpx;
  height: 40rpx;
  /* background-color: #ffd7df; */
  margin-left: 20rpx;
}

/* 提示信息 */
.psection{
    color: #b4b4b4;
    font-size: 28rpx;
}

/* 登录按钮 */
.login-Btn {
  width:80%;
  height:85rpx;
  border-radius:100rpx;
  margin:80rpx auto 20rpx auto;
  line-height:80rpx;
  text-align:center;
  background:#ff5d8f;  
  font-size:33rpx;
  color:#fff;
}

/* 微信登录 */
.weLogin-btn{
  width:80%;
  height:85rpx;
  border-radius:100rpx;
  margin:30rpx auto 20rpx auto;
  font-size:33rpx;
  color:#fff;
}


/* 忘记密码 */
.forgetPWView{
  text-align: center;
  font-size: 30rpx;
  margin-top: 40px;
}

.forgetPWView text{
  color: #9f9f9f;
  margin: 8px;
}

/* 第三方登录 */
.other-text{
  text-align: center;
  width: 100%;
  font-size: 28rpx;
  margin-top: 40rpx;
  margin-left: 150rpx;
  color: #b4b4b4;
  display: flex;
  flex-direction: row;
}
.text-line{
  height: 1rpx;
  width: 170rpx;
  margin-top: 20rpx;
  border-top: 1rpx solid #9f9f9f;
}

.otherLogin{
  height: 100rpx;
  width: 70%;
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content:space-between;
}

/* 第三方-图标 */
.otherLogin-item{
  height: 80rpx;
  width: 80rpx;
  flex-shrink:0;
  margin-left: 200rpx;
}

.otherLogin-item2{
  height: 80rpx;
  width: 80rpx;
  flex-shrink:0;
}

.otherLogin-item image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.otherLogin-item2 image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

