
.body{
  width:100%;
}
/* 滑块视图容器 */
swiper{
  width: 100%;
  height: 400rpx;
}

.swipers swiper image{
  width: 100%;
  height: 100%;
}

.selects{
  margin-top: 10px;
  /* border-bottom: 4px #ddd solid; */
  padding-bottom: 10px;
}

.selects-header{
  border-left: 3px solid green;
  display: flex;/*flex布局*/
  justify-content:space-between;
  padding: 5px;
  align-items: center;

}

.text-right{
  font-size: 12px;
  color: green;

}

.selects-context{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  /* justify-content:center; */
}

.selects-context{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.selects-context-item{
  flex-direction: row;
  flex-wrap: wrap;
  position: relative;/*相对定位*/
  margin-left: 30rpx;
  margin-right: 15rpx;
  margin-top: 30rpx;
  margin-bottom: 60rpx;
}

.selects-context-item image{
  width: 100%;
  height: 100%;
}

.selects-context-item text{
  font-size: 12px;
}

.selects-context-block{
  width: 100%;
  height: 20rpx;
 border-bottom: 4px #ddd solid;
}
