<view class='body'>
  <view class='swipers'>
    <swiper indicator-dots="{{indicatorDots}}"
      autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
      <block wx:for="{{lbData}}" wx:key="item">
        <swiper-item>
          <image src="{{urlInfo}}{{item.filePath}}" class="slide-image"/>
        </swiper-item>
      </block>
    </swiper>
  </view>

  <view class='selects'>
    <view class='selects-header'>
      <text>精品分类</text>
      <text class='text-right'>全部分类</text>
    </view>

    <view class='selects-context'>
      <view class='selects-context-item' wx:for='{{jptjData}}'  wx:key="item" wx:for-index="bindex" >
        <image src='{{urlInfo}}{{item.filePath}}'/>
        <text>{{item.flName}}</text>
      </view>
      <!-- <view class='selects-context-block' wx:if='bindex%4=0'></view> -->
      <!-- <view class='selects-context-item'>
         <image src='/images/1.jpg' />
         <text>普通纪念币</text>
      </view> -->
    </view>

  </view>

</view>

